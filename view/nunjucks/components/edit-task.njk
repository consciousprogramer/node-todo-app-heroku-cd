{% extends "nunjucks/layout.njk" %}

{% block title %}
    {{pageTitle}}
{% endblock %}

{% block css %}
    
{% endblock %}

{% block body %}
    {% include './navbar.njk' %}
    <div class="container">
        <h1 class="py-5 text-center">To-do app</h1>
        <div class="container-fluid mx-4 rounded bg-light py-3">
            <div class="mt-3 py-2">
                <form action="/edit-task/{{task._id}}" method="post" class='d-flex flex-row justify-content-around'>
                    <div class="flex-grow-1 p-2">
                        <label for="title"> Edit the task!</label>
                        <input type="text" class="form-control fs-5 fw-bold" id="title" name='title' placeholder="Enter task" value='{{task.title}}'>
                    </div>
                    <div class="p-2 flex-shrink-0 d-flex align-items-end">
                        <button class='btn btn-primary' type='submit'>DONE</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

